import { AddDepModal } from "./AddDepModal";
//bying tells the product that is sent to modal
  addModalShow: false,
    addModalClose: true,
    buying: "",
    isPopUp: "Off",
    noPopUp: true,
    
    
    
      changeNoPop = () => {
    if (this.state.noPopUp == true) {
      this.setState({ noPopUp: false });
      this.setState({ isPopUp: "On" });
    } else {
      this.setState({ noPopUp: true });
      this.setState({ isPopUp: "Off" });
    }
  };
  
  
  
  <div>
          <ButtonToolbar>
            <AddDepModal
              show={this.state.addModalShow}
              onHide={this.state.addModalClose}
              finishit={this.finishit}
              buying={this.state.buying}
            />
          </ButtonToolbar>
        </div>
        
        
        
